@model IEnumerable<mvc_asp_core.Models.Department>
@{
    ViewData["Title"] = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Result"] != null)
{
<div class="alert alert-success">
    <span> @TempData["Result"]</span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}

<div class="row">
    <div class="col-md-2">

    </div>
    <div class="list-group col-md-8">
        @foreach (var item in Model)
        {
            <div class="list-group-item list-group-item-action flex-column align-items-start" style="margin-bottom:5px;">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1" style="color:#FFD133;"><strong>@item.Name</strong></h5>
                    <span class="badge badge-pill"><a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Id">Edit</a></span> |
                    <span class="badge" style="background-color:#ee7070;"><a asp-action="Delete"  asp-controller="Department" asp-route-id="@item.Id">Delete</a></span>
                </div>
                <div>                
                        <p class="mb-1">@item.Details</p>
                </div>
                

            </div>
        }


    </div>
    <div class="col-md-2">

    </div>
</div>

