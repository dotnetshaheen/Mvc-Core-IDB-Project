@model mvc_asp_core.Models.Department
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Result"] != null)
{
    <div class="alert alert-success">
        <span> @TempData["Result"]</span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-md-2">

    </div>
    <div class="list-group col-md-8">
        <form method="post" asp-action="Delete" asp-controller="Department">
            <div class="list-group-item list-group-item-action flex-column align-items-start" style="margin-bottom:5px;">
                <div class="d-flex w-100 justify-content-between">
                    <h2 class="mb-1" style="color:#FFD133;"><strong>Are you sure?</strong></h2>
                </div>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1" style="color:#FFD133;"><strong>@Model.Name</strong></h5>
                </div>
                <div>
                    <p class="mb-1">@Model.Details</p>
                    <input type="submit"class="btn btn-danger" value="Delete Permanently" />
                </div>

            </div>
        </form>
    </div>
    <div class="col-md-2">
    </div>
</div>


