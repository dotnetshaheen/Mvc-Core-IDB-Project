@model mvc_asp_core.Models.PatientServices

@{
    ViewData["Title"] = "Create";
}

<h2>Multiple Insert Using Ajax</h2>
<h4>Patient Services</h4>
@if (TempData["Result"] != null)
{
    <div class="alert alert-success">
        <span> @TempData["Result"]</span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<hr />
<div class="row">
  
    <div class="col-md-6">
        <h3>Add Record</h3>
        <form id="formGivenId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" id="txtPatient" class="form-control fData" asp-items="ViewBag.patient">
                    <option selected>Select Patient</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label"></label>
                <select asp-for="DoctorID" id="txtDoctor" class="form-control fData" asp-items="ViewBag.Doctor">
                    <option selected>Select Doctor</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" id="txtService" class="form-control fData" asp-items="ViewBag.service">
                    <option selected>Select Service</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDate" class="control-label"></label>
                <input asp-for="ServiceDate" type="date" id="txtDate" class="form-control fData" />
                <span asp-validation-for="ServiceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentStatus" class="control-label"></label>
                <input asp-for="PaymentStatus" id="txtStatus" class="form-control fData" />
                <span asp-validation-for="PaymentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="button" class="add-row" value="Add More"> |
               
                    <button type="button" id="btnSave" class="btn btn-success">Submit</button>
               
            </div>


        </form>
    </div>
    <div class="col-md-6">
        <div>
            <h3>Display Record</h3>
            <table class="table table-bordered table-responsive table-hover" style="margin-top:34px;" id="tbl">

                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Service</th>
                        <th>Date</th>
                        <th>Payment Status</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
   
    </div>
</div>

