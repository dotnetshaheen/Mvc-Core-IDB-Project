            var form = $("#formGivenId");
            var data = new FormData(form[0]);

            $(".add-row").click(function () {
                //alert("click");
                var patient = $("#txtPatient").val();
                var doctor = $("#txtDoctor").val();
                var service = $("#txtService").val();
                var date = $("#txtDate").val();
                var status = $("#txtStatus").val();
                var rowsIndex = $('table tbody tr').length;
                data.append("PatientServices[" + rowsIndex + "].PatientId", patient);
                data.append("PatientServices[" + rowsIndex + "].DoctorID", doctor);
                data.append("PatientServices[" + rowsIndex + "].ServiceId", service);
                data.append("PatientServices[" + rowsIndex + "].ServiceDate", date);
                data.append("PatientServices[" + rowsIndex + "].PaymentStatus", status);
                var markup = "<tr><td>" + patient + "</td> <td>" + doctor + "</td><td>" + service + "</td><td>" + date + "</td><td>" + status + "</td></tr>";

                $("table tbody").append(markup);
            })

            $("#btnSave").click(function (e) {
                    
                $.ajax({
                    type: "POST",
                    url: "/PatientServices/Create"
                    , data: data,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        alert('Successfully saved')
                    }
                });

            });
        });

       

