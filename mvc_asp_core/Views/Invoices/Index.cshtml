@model IEnumerable<mvc_asp_core.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        <h2>Index</h2>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.InvoiceTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DueTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Patient)
                    </th>
                    <th>Patient Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InvoiceTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient.FirstName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="col-md-2"></div>
</div>